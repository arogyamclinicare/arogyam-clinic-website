# Arogyam Clinic - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin Authentication
# IMPORTANT: Use hashed password in production, not plain text
VITE_ADMIN_EMAIL=admin@arogyamclinic.com
VITE_ADMIN_PASSWORD_HASH=your_hashed_admin_password_here

# Security Configuration
VITE_APP_ENV=production
VITE_ENABLE_SECURITY_LOGGING=true
VITE_SESSION_TIMEOUT=1800000
VITE_CSRF_TOKEN_EXPIRY=3600000

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Performance Monitoring (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Development Only (Remove in production)
# VITE_ADMIN_PASSWORD=plain_text_password_remove_in_production
