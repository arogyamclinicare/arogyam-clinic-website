# Environment Variables Template
# COPY THIS FILE TO .env.local FOR DEVELOPMENT OR .env.production FOR PRODUCTION
# NEVER COMMIT ACTUAL .env FILES TO VERSION CONTROL!

# =============================================================================
# DEVELOPMENT ENVIRONMENT (.env.local)
# =============================================================================

# Build Configuration
VITE_BUILD_MODE=development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MONITORING=false

# Performance Settings
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PRECACHING=false
VITE_ENABLE_OFFLINE_SUPPORT=false

# Security Settings
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_ENABLE_AUDIT_LOGGING=true

# Supabase Configuration (Development)
VITE_SUPABASE_URL=https://your-dev-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_dev_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_dev_supabase_service_role_key_here

# Admin Configuration (Development)
VITE_ADMIN_PASSWORD_HASH=your_dev_bcrypt_hash_here

# Analytics (Development - usually disabled)
VITE_GOOGLE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_PATIENT_PORTAL=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_CONSULTATION_BOOKING=true

# Cache Settings
VITE_CACHE_DURATION=3600
VITE_API_CACHE_DURATION=300

# =============================================================================
# PRODUCTION ENVIRONMENT (.env.production)
# =============================================================================

# Build Configuration
VITE_BUILD_MODE=production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MONITORING=true

# Performance Settings
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PRECACHING=true
VITE_ENABLE_OFFLINE_SUPPORT=true

# Security Settings
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_ENABLE_AUDIT_LOGGING=true

# Supabase Configuration (Production) - USE DIFFERENT KEYS!
VITE_SUPABASE_URL=https://your-prod-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_prod_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_prod_supabase_service_role_key_here

# Admin Configuration (Production) - USE DIFFERENT PASSWORD!
VITE_ADMIN_PASSWORD_HASH=your_prod_bcrypt_hash_here

# Analytics (Production)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_PATIENT_PORTAL=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_CONSULTATION_BOOKING=true

# Cache Settings
VITE_CACHE_DURATION=31536000
VITE_API_CACHE_DURATION=3600



# =============================================================================
# HOW TO SET UP ENVIRONMENT
# =============================================================================

# 1. Copy this template to .env.local for development
# 2. Copy this template to .env.production for production
# 3. Fill in your actual values
# 4. NEVER commit .env files to git
# 5. Store production credentials securely
# 6. Rotate keys regularly

